{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2016", "dom"],
    "strictPropertyInitialization": false,
    "target": "es6"
  },
  "include": ["./src/**/*"]
}
